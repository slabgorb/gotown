{
  "parser": "babel-eslint",
  "globals": {
    "_": true
  },
  "settings" : {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "babel"
  ],
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "linebreak-style": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 2,
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "react/forbid-prop-types": 0
  }
}
